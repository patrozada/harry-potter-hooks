{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "arrow-parens":["error", "as-needed"],
        "prettier/prettier": ["warn", {
            "singleQuote": true,
            "parser": "flow",
            "arrowParens": "avoid"}],
        "react/react-in-jsx-scope": "off",
        "quotes": [2, "single"]
    }
}
